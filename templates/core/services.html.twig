{% block body %}

	<main
		id="main">

		<!-- ======= Breadcrumbs ======= -->
		<section id="breadcrumbs" class="breadcrumbs">
			<div class="container">

				<div class="d-flex justify-content-between align-items-center">
					<h2>
						EMERGENCE ET ACTUALISATION
					</h2>
					<ol>
						<li>
							<a href="{{path("index")}}">
								Accueil
							</a>
						</li>
						<li>
							Services
						</li>
					</ol>
				</div>

			</div>
		</section>
		<!-- End Breadcrumbs -->

<!-- ======= Services Section ======= -->
    <section id="services" class="services section-bg">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <h2>NOS SERVICES</strong></h2>
          <p>Ce que fait EMERGENCE ET ACTUALISATION</p>
        </div>

        <div class = "row">
          {% for service in services if service.active %}
		  <div class="col-md-6 d-flex align-items-stretch mt-4" data-aos="zoom-in" data-aos-delay="{{loop.index0 * 10}}">
            <div class="card-content">
                    <div class="card-img">
					{% if service.image.name %}<img src="{{ vich_uploader_asset(service, 'imageFile') | imagine_filter ('vignettes_services') }}" class="img-fluid" alt="{{ service.slug }}" />{% endif %}                        
                    </div>
                    <div class="card-desc">
                        <h3> {{service.nom}} </h3>
                        <p class="text-justify">{{service.description|truncate(250, true, " ... ") | raw}}</p>
                            <a href="{{path('service', { 'service_slug': service.slug })}}" class="btn-card">En savoir plus</a>   
                    </div>
                </div>
          </div>
          {% endfor %}
		 
		  </div> 

