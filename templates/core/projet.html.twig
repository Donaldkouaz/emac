{% extends 'base.html.twig' %}

{% block title %}
	Services
	{{ parent() }}
{% endblock %}

{% block body %}

  <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>EMERGENCE ET ACTUALISATION</h2>
          <ol>
            <li><a href="{{path('index')}}">Accueil</a></li>
            <li>Projets</li>
            <li>{{projet.nom}}</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->

    <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
      <div class="container" data-aos="fade-up">
        <div class="portfolio-details-container">

          <div class="owl-carousel portfolio-details-carousel">
         {% if projet.image1.name %}<img src="{{ vich_uploader_asset(projet, 'image1File')| imagine_filter ('images_projets') }}" class="img-fluid" alt="{{ projet.slug }}" />{% endif %}
         {% if projet.image2.name %}<img src="{{ vich_uploader_asset(projet, 'image2File')| imagine_filter ('images_projets') }}" class="img-fluid" alt="{{ projet.slug }}" />{% endif %}
         {% if projet.image3.name %}<img src="{{ vich_uploader_asset(projet, 'image3File')| imagine_filter ('images_projets') }}" class="img-fluid" alt="{{ projet.slug }}" />{% endif %}
          </div>

          <div class="portfolio-info">
            <h3>Infos sur le projet</h3>
            <ul>
              <li><strong>Réalisé par</strong>: {{projet.auteur}}</li>
              <li><strong>Date du projet</strong>: {{projet.datecreation|date('d/m/Y')}}</li>
              <li><strong>Catégorie</strong>: {{projet.categorie}} </li>
              <li><strong>Contact</strong>: {{projet.contact}}</li>
            </ul>
          </div>

        </div>

        <div class="portfolio-description">
          <h2>{{projet.nom}}</h2>
          <p>
            {{projet.description|raw}}
          </p>
        </div>

      </div>
    </section><!-- End Portfolio Details Section -->

  </main><!-- End #main -->
{% endblock body %}