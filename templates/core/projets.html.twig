{% block body %}

	<main
		id="main">

		<!-- ======= Breadcrumbs ======= -->
		<section id="breadcrumbs" class="breadcrumbs">
			<div class="container">

				<div class="d-flex justify-content-between align-items-center">
					<h2>
						EMERGENCE ET ACTUALISATION
					</h2>
					<ol>
						<li>
							<a href="{{path("index")}}">
								Accueil
							</a>
						</li>
						<li>
							Produits
						</li>
					</ol>
				</div>

			</div>
		</section>
		<!-- End Breadcrumbs -->

<!-- ======= Services Section ======= -->
    <section id="services" class="services section-bg">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <h2>PROJETS REALISES</strong></h2>
          <p>Parcourez les projets qui ont vus le jour avec l'appui de Emergence et Actualisation</p>
        </div>

        <div class = "row">
          {% for projet in projets if projet.active %}
		  <div class="col-lg-4 col-md-6 d-flex align-items-stretch mt-4" data-aos="zoom-in" data-aos-delay="300">
            <div class="card-content">
                    <div class="card-img">
					{% if projet.image1.name %}<img src="{{ vich_uploader_asset(projet, 'image1File') | imagine_filter ('vignettes_projets') }}" class="img-fluid" alt="{{ projet.slug }}" />{% endif %}                        
                    </div>
                    <div class="card-desc">
                        <h3> {{projet.nom}} </h3>
                        <p>{{projet.description|truncate(100, true, " ... ") | raw}}</p>
                            <a href="{{path('projet', { 'projet_slug': projet.slug })}}" class="btn-card">Voir plus</a>   
                    </div>
                </div>
          </div>
          {% endfor %}
		 
		  </div> 

